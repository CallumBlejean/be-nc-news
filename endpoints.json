{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object by article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "body": "Text from the article..",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "http://website.com/image.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the specified article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "body": "Text from the article..",
          "article_id": 1,
          "author": "weegembump",
          "votes": 111,
          "created_at": "2018-05-30T15:59:13.341Z"
        },
        {
          "comment_id": 2,
          "body": "Text from the article..",
          "article_id": 1,
          "author": "weegembump",
          "votes": 10,
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to the specified article and returns the newly created comment",
    "requestBody": {
      "username": "butter_bridge",
      "body": "This is a test comment."
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 14,
        "article_id": 1,
        "author": "butter_bridge",
        "body": "This is a test comment.",
        "votes": 0,
        "created_at": "2018-05-30T15:59:13.341Z"
      }
    }
  },
  
    "PATCH /api/articles/:article_id": {
      "description": "updates the votes of an article by article_id and returns that article",
      "requestBody": {
        "inc_votes": 1
      },
      "exampleResponse": {
        "article": {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "butter_bridge",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 101,
          "article_img_url": "http://website.com/image.jpg"
        }
      }
    }
  }


